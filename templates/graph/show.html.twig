{% extends 'base.html.twig' %}
{% block body %}

<div id="graph-container" style="width:100%; height:600px; border:0 solid #ccc;"></div>

{# Server provides JSON graph state here #}
<script type="application/json" id="graph-data">
    {{ graph_state|json_encode|raw }}
</script>
{% endblock %}


{% block javascripts %}
    {{ importmap('graph-app') }}
{% endblock %}

{% block stylesheets %}
<style>    
/* Target the container wrapping your Graphviz SVG */
#graph-container {
    padding: 0;          /* Remove extra padding */
    margin: 0;           /* Remove margin if any */
    border: 0;           /* Remove border */
    width: 100%;         /* Fill the container horizontally */
    height: auto;        /* Adjust height automatically */
    overflow: hidden;    /* Prevent scrollbars */
}

body {
    margin: 0;
    padding: 0;
}
</style>    
{% endblock %}
